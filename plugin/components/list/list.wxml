<view>
  <view class='content'>
    <block wx:for="{{Length}}" wx:key="item">
      <input class='inputBox' value="{{Value.length>=index+1?Value[index]:''}}" disabled password='{{ispassword}}' catchtap='Tap' />
    </block>
  </view>
  <input name="password" password="{{true}}" class='ipt' maxlength="{{Length}}" focus="{{isFocus}}" bindinput="Focus" />
</view>